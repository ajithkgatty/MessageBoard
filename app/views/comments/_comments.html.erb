<div class="comment">
<% @message.comments.each do |comment| %>
<p class="comment-content"> <%= comment.content %> </p>

<% unless comment.user.nil? %>
<p class="comment-posted-by">Posted by <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %> </p>
<% end%>
<% if user_signed_in?  %>
<% if comment.user_id == current_user.id %>
<%= link_to "Edit", edit_message_comment_path(@message.id,comment) %>
<%= link_to "Delete", message_comment_path(@message.id,comment), :method => :Delete, :data => {:confirm => "Are you sure you want to delete this comment ??"} %>
<% end %>
<% end %>
<% end %>
</div>	